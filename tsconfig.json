{
  "compilerOptions": {
    /* Básico */
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es2019"
    ],
    "jsx": "react-native",
    /* Módulos */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    /* Tipo checking - Modo permisivo para empezar */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    /* Adicional */
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    /* Paths - Para imports limpios (opcional) */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@types": [
        "src/types"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@services/*": [
        "src/services/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "App.js",
    "index.js",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}